// Table of content
.table-of-contents
  margin-top 5rem
  margin-left 46rem
  position fixed

  ul
    list-style-type none
    li 
      a
        color #565C5F
        font-weight 400

// Markdown table
table {
  border-radius: 6px;
  border-style: hidden; /* hide standard table (collapsed) border */
  box-shadow: 0 0 0 0.3px #E9EBEB; /* this draws the table border  */ 
  background-color: white
  border: 1px #E9EBEB solid

  thead tr:first-child {
    background-color: rgba(223, 226, 229, 0.2)
  }

  tr {
    border-top: 2px;
  }

  th {
    border: 2px;
  }

  td {
    min-width: 80px;
    border:none;
  }
}

footer {
  margin-top: 2rem;
  width: 100%;
  height: 8rem;
  color: white;
  background-color: black;
  text-align: center;
  padding: 2rem;
}


