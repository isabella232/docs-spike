// showing default values
$accentColor = #3eaf7c
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34

body .navbar
  background-color: #F9FAFA

// Custom container
.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger, &.note, &.cat
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
    border-radius 8px
  &.cat
    background-color #f3f5f7
    border-color darken(purple, 20%)
    color darken(purple, 40%)
    .custom-block-title
      color darken(purple, 40%)
    a
      color $textColor
  &.note
    background-color #E6F7EC
    border-color #01A194
    color #01A194
    .custom-block-title
      color #0F504A
    a
      color #0C625B

